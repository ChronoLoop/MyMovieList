{
    "name": "mymovielist-app",
    "version": "1.0.0",
    "description": "A movie database website",
    "main": "server.js",
    "scripts": {
        "setup": "npm ci && npm ci --prefix client",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "install-all": "concurrently \"npm ci\" \"npm ci --prefix client\"",
        "client": "npm run start --prefix client",
        "server": "nodemon --watch server ./server/server.js",
        "build": "npm run build --prefix client",
        "start": "node server/server.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ikevinws/MyMovieList.git"
    },
    "keywords": [],
    "author": "Kevin Wang",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/ikevinws/MyMovieList/issues"
    },
    "homepage": "https://github.com/ikevinws/MyMovieList#readme",
    "dependencies": {
        "bcrypt": "^5.0.1",
        "concurrently": "^7.3.0",
        "connect-mongo": "^4.6.0",
        "cookieparser": "^0.1.0",
        "cors": "^2.8.5",
        "express": "^4.18.1",
        "express-session": "^1.17.3",
        "mongoose": "^6.5.4",
        "morgan": "^1.10.0",
        "multer": "^1.4.2",
        "passport": "^0.6.0",
        "passport-local": "^1.0.0"
    },
    "devDependencies": {
        "dotenv": "^16.0.2",
        "eslint": "^8.23.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-node": "^4.1.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-flowtype": "^8.0.3",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.31.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "nodemon": "^2.0.19",
        "prettier": "^2.7.1"
    }
}
